
<section class="container">
<div class="row">
	<div class="small-12 medium-10 medium-centered columns">
		<h1 id="sign_up-content-1" class="mercury-region" data-mercury="full"><%=content('sign_up-content-1')%></h1>

		<p id="sign_up-content-2" class="hide-for-small-only mercury-region" data-mercury="full"><%=content('sign_up-content-2')%></p></p>
	</div>
</div>
<div class="row contact_form signup">
<form data-abide="ajax">

	  <div class="form_info small-12 medium-5 large-5 small-centered medium-centered large-centered columns">
	  <p class="bold">1.Personal Data</p>
	  </div>
	  
	  <div class="small-12 medium-12 medium-centered small-centered columns">
		<label for="first-name">First Name</label>
		<input name="first-name" type="text"  required >
		<small class="error">First Name is required</small>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="last-name"> Last Name</label>
		<input name="last-name" type="text"  required >
		 <small class="error">Last Name is required</small>
	  </div> 
	  <div class="small-12 small-centered columns">
		<label for="phone">Phone Number</label>
		<input name="phone" type="text"  pattern="number" required >
	  <small class="error">Phone Number is required</small>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="email">Email</label>
		<input name="email" type="text"  pattern="email">
		<small class="error">Email is required</small>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="password">Password <br><small>at least 7 characters</small></label>
		<input name="password" id="password" type="password"  required>
		<small class="error">Password is required</small>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="password_confirmation">Retype Password</label>
		<input name="password_confirmation" type="password"   required data-equalto="password">
		<small class="error">Password did not match</small>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="job_title">Job Title <br class="hide-for-small-only"><small>optional</small></label>
		<input name="job_title" type="text" >
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="fax">Fax Number <br class="hide-for-small-only"><small>optional</small></label>
		<input name="fax" type="text" ></input>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="referrer">Referrer<br><small>optional</small></label>
		<input name="referrer" type="text">
	  </div>
	  <div class="form_info small-12 medium-5 large-5 small-centered medium-centered large-centered columns">
	  	<p class="bold">2.Agency Data</p>
	  </div>

	  <div class="small-12 small-centered columns">
		<label for="agency_name">Agency Name</label>
			<input name="agency_name" type="text" required aria-required="true">
	  		<small class="error">Agency name is required</small>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="agency">Agency Phone</label>
		<input name="agency" type="text" required ></input>
	  		<small class="error">Agency Phone is required</small>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="owner">Owner or President</label>
		<input name="owner" type="text"  required >
		<small class="error">Owner is required</small>
	  </div>
	  	  <div class="small-12 small-centered columns">
		<label for="street">Street Address</label>
		<input name="street" type="text" required >
		<small class="error">Street Address is required</small>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="city">City</label>
			<input name="city" type="text"  required aria-required="true"></input>
		<small class="error">City is required</small>	
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="country">Country</label>
		<select>
		  <option value="country">Select</option>
		</select> 
		<small class="error">Country is required</small>
	  </div>
	  	<div class="small-12 small-centered columns">
		<label for="state">State/Province</label>
		<select>
		  <option value="state">Select</option>
		</select>
		<small class="error">State is required</small> 
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="zip">Zip/Postal Code</label>
		<input name="zip" type="text" required aria-required="true">
		<small class="error">Zip/Postal Code is required</small>
	  </div>
	  <div class="checkboxes small-10 medium-5 large-5 small-centered medium-centered large-centered columns" >
	  	<p>Agency mailing address</p>
		<input type="checkbox" name="difaddr" id="difaddr" value="Bike" class="box_expander" data-target="diffaddress"><label for="difaddr">Different from address specified above</label>
	  </div>	
	<div class="diffaddress">
	  <div class="small-12 small-centered columns">
		<label for="street_diff">Street Address</label>
		<input name="street_diff" type="text">
	  </div>
	  <div class="small-12 small-centered columns">
			<label for="city_diff">City</label>
			<input name="city_diff" type="text"  >
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="country_diff">Country</label>
		<select>
		  <option value="country_diff">Select</option>
		</select>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="state_diff">State/Province</label>
		<select>
		  <option value="state_diff">Select</option>
		</select>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="zip_diff">Zip/Postal Code</label>
		<input name="zip_diff" type="text">
	  </div>
	</div>
	<div class="checkboxes small-10 medium-5 large-5 small-centered medium-centered large-centered columns">
		<p>Additional Data <small style="color: lightgray">optional</small></p>
		<input type="checkbox" name="data" id="data"value="Bike" class="box_expander" data-target="extradata"><label for="data">I want to add additional Agency data (IATA, GDS, Memberships) </label>
	</div>
	<div class="extradata">
	  <div class="small-12 small-centered columns">
		<label for="arc">ARC</label>
		<input name="arc" type="text" ></input>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="iata">IATA</label>
		<input name="iata" type="text" ></input>
	  </div>
	    <div class="small-12 small-centered columns">
		<label for="ttt">TRUE/TICO/TIDS</label>
		<input name="ttt" type="text" ></input>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="clia">CLIA</label>
		<input name="clia" type="text" ></input>
	  </div>
	    <div class="small-12 small-centered columns">
		<label for="agency">Agency website address (url)</label>
		<input name="agency" type="text" ></input>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="business">Business Type</label>
		<input name="business" type="text" ></input>
	  </div>
	  <div class="extra_labels small-11 medium-5 large-5 small-centered medium-centered large-centered columns"><strong>MEMBERSHIP</strong></div>
	    <div class="small-12 small-centered columns">
		<label for="hba">HBA</label>
		<input name="hba" type="text" ></input>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="host">HOST</label>
		<input name="host" type="text" ></input>
	  </div>
	    <div class="small-12 small-centered columns">
		<label for="consortium">Consortium/Affiliate</label>
		<input name="consortium" type="text" ></input>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="asta">ASTA</label>
		<input name="asta" type="text" ></input>
	  </div>
	  	<div class="extra_labels small-11 medium-5 large-5 small-centered medium-centered large-centered columns">
			<strong>GDS</strong>
		</div>
	    <div class="small-12 small-centered columns">
			<label for="sabre">Sabre PCC</label>
			<input name="sabre" type="text" ></input>
	  	</div>
	  <div class="small-12 small-centered columns">
		<label for="galileo">Galileo PCC</label>
		<input name="galileo" type="text" ></input>
	  </div>
	    <div class="small-12 small-centered columns">
		<label for="worldspan">Worldspan PCC</label>
		<input name="worldspan" type="text" ></input>
	  </div>
	  <div class="small-12 small-centered columns">
		<label for="amadeus">Amadeus PCC</label>
		<input name="amadeus" type="text" ></input>
	  </div> 
	  <div class="small-12 small-centered columns">
		<label for="apollo">Apollo PCC</label>
		<input name="apollo" type="text" ></input>
	  </div>
	</div>

	<div class="checkboxes small-10 medium-5 large-5 small-centered medium-centered large-centered columns">
	<input type="checkbox" name="vehicle" id="terms" value="Bike" class=""><label for="terms">I agree to TripProâ„¢ <%= link_to "Terms and Conditions", '#', class: "red" %></label>
	</div>
	 
	<input type="submit" value="Submit" class="button red-one grey radius">

</form>
</div>
