<%= form_for([:admin, @video], html: {class: :row, data: {remote: true}}) do |f| %>
  <fieldset class="columns small-9 scroll-panel">
    <h2><%= t(".title.#{f.object.persisted? ? 'update' : 'create'}") %></h2>
      <div class="field">
        <%= f.label :page_name %>
        <%= f.select :page_name, %w{homepage tour} %>
      </div>
      <div class="field">
        <%= f.label :order %>
        <%= f.number_field :order %>
      </div>
      <div class="field">
        <%= f.label :file, raw(Video.human_attribute_name(:file) + " <i>#{@video.file_file_name}</i>") %>
        <%= f.file_field :file %>
      </div>
      <div class="field">
        <%= f.label :cover_photo, raw(Video.human_attribute_name(:cover_photo) + " <i>#{@video.cover_photo_file_name}</i>") %>
        <%= f.file_field :cover_photo %>
      </div>
    </fieldset>
  <fieldset class="columns small-3 panel">
    <div class="notification hidden"></div>
    <%= f.button nil, class: [:button, :secondary, :round, :expand], name: :commit %>
  </fieldset>
<% end %>
