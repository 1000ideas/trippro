<li class="row" data-context>
  <div class="columns small-6">
    <%= f.select_box :id, category %>
    <%= category.id %>
  </div>
  <div class="columns small-3">
    <%= l category.updated_at, format: :long %>
  </div>
  <div class="columns small-3">
    <%= l category.created_at, format: :long %>
    <a href="#" data-context-button><%= fa_icon('ellipsis-h') %></a>
  </div>
  <ul data-context-target>
    <li><%= link_to fa_icon('search fw', text: t('helpers.actions.show')), category_path(category), target: '_blank' %></li>
    <li><%= link_to fa_icon('edit fw', text: t('helpers.actions.edit')), edit_admin_category_path(category, format: :js), data: {remote: true} %></li>
    <li><%= link_to fa_icon('trash-o fw', text: t('helpers.actions.destroy')), admin_category_path(category), data: {confirm: t('helpers.actions.confirm'), method: :delete } %></li>
  </ul>
</li>
