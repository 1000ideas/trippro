<% breadcrumbs t('.title') %>
<% title t('.title') %>
<section class="news_content">
<div class="row">
  <div class="small-8 columns">
  <!-- <h2><%= t('.title') %></h2> -->
  <% unless @news.blank? %>
  <ul id="news_list">
    <% @news.each do |news| %>
      <li>
        <div class="date"><%= l news.created_at, format: '%d-%m-%Y %H:%M' %></div>
        <h3>
          <%= news.title %>
        </h3>
        <%= content_tag :div, class: 'image' do %>
          <%= image_tag news.photo.url(:medium) %>
        <% end if news.photo? %>
        <div class="content"><%=short news.content, 160 %></div>
        <div class="more"><%= link_to t('helpers.actions.more'), news_path(news) %></div>
      </li>
      <hr>
    <% end %>
  </ul>
  <% end %>
  <%= will_paginate @news %>
</div>
  <div class="small-4 columns">
    <div class="categories">
      <p>News Category</p>
      <ul>
        <li>News</li>
        <li>Reports</li>
        <li>Multimedia</li>
      </ul>
    </div>
