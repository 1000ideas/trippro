<% if @errors %>
$("small.error.after_commit").html("")
$("small.error.after_commit").html("<%= escape_javascript(render partial:"signup_errors", locals: {errors: @errors}) %>");
$("small.error.after_commit").fadeIn()
setTimeout(function() {
    $('small.error.after_commit').fadeOut('fast');
}, 3000);
<% else %>
$(".container").html("<%= escape_javascript(render partial: "thank_you") %>");
<% end %>